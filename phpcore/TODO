SELECT
	idrecepty,
	a_uzivatele.jmeno,
	a_kategorie.nazev,
	a_recepty.nazev,
	doba,
	porce,
	a_recepty.pridano,
	a_recepty.upraveno,
	group_concat(DISTINCT a_nadobi.nazev),
	group_concat(DISTINCT a_suroviny.nazev)
FROM a_recepty
JOIN a_uzivatele USING(iduzivatel)
JOIN a_kategorie USING(idkategorie)
JOIN a_nadobi_na_recepty USING(idrecepty)
JOIN a_nadobi USING(idnadobi)
JOIN a_suroviny_na_recepty USING(idrecepty)
JOIN a_suroviny USING(idsuroviny)
GROUP BY idrecepty;

SELECT a_recepty.nazev nazev, a_recepty.popis popis, doba, porce, autor,
REPLACE(group_concat(DISTINCT a_nadobi.nazev ORDER a_nadobi.nazev), ',', ', ') nadobi,
 REPLACE(group_concat(DISTINCT a_suroviny.nazev), ',', ', ')  suroviny
 FROM a_recepty
 JOIN a_nadobi_na_recepty ON a_recepty._id=a_nadobi_na_recepty.idrecepty
JOIN a_nadobi ON a_nadobi._id=idnadobi
JOIN a_suroviny_na_recepty ON a_recepty._id=a_suroviny_na_recepty.idrecepty
JOIN a_suroviny ON a_suroviny._id=idsuroviny
 WHERE a_recepty._id=4